      { id: "te_mint", name: "TÃ© Mint Citrus Teavana", description: "TÃ© verde con limÃ³n, verbena y menta", sizes: [{ label: "Regular", price: 10.0 }] }, // :contentReference[oaicite:11]{index=11}
