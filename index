      { id: "chicken_ciabatta", name: "SÃ¡ndwich Chicken Ciabatta", description: "Pollo deshilachado en pan ciabatta", sizes: [{ label: "Unidad", price: 14.5 }] }, // :contentReference[oaicite:14]{index=14}
    ],
